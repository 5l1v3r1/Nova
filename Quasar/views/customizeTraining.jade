extends layout

block headerAdditions
  link(rel="stylesheet", name="text/css", href="configstyle.css", media="screen")
  style(type='text/css')
    th {
     background-color: #d0e9fc; 
    }
    
  
block content
  div
    h1 Choose Training Data
    form(method="post", action="/customizeTrainingSave")
      table(border = "1")
        thead
          tr
            th Include?
            th Hostility
            th UID
            th Description
        tbody
          - for (var i = 0; i < hostiles.length; i++)
            tr
              td
                input(type="checkbox", name="#{uids[i]}", value="1", checked)
              td #{hostiles[i]}
              td #{uids[i]}
              td #{desc[i]}
      br
      input(type="Submit", value="Confirm Training Data Selection")
