extends layout

block headerAdditions
  link(rel="stylesheet", name="text/css", href="configstyle.css", media="screen")
  script
   var route = "";

    function setRoute(which)
    {
      route = which;
      document.getElementById("route").setAttribute('value', route);
    }

block content
  form#basicConfigForm(method="post", action="/configureNovaSave")
    include includes/basicConfigForm
    input(id="route", name="route", type='hidden', value="route")
  button(onClick="window.location='/'") Back
  button(id="autoconfigButton", type="button", onclick="now.WizardHasRun(); setRoute('autoconfig'); document.getElementById('basicConfigForm').submit();", value="Automatically Configure Haystack") Automatically Configure Haystack 
  button(id="manconfigButton", type="button", onclick='now.WizardHasRun(); setRoute("manconfig"); document.getElementById("basicConfigForm").submit();', value="Manually configure Haystack") Manually configure Haystack
  
